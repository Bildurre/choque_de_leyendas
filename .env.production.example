APP_NAME="Alanda: Choque de Leyendas"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://choquedeleyendas.universoalanda.com

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Base de datos
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

# Drivers
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail (configurar según tu proveedor)
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="info@universoalanda.com"
MAIL_FROM_NAME="${APP_NAME}"

# Configuración regional
LOCALE=es
FALLBACK_LOCALE=es
FAKER_LOCALE=es_ES
TIMEZONE=Europe/Madrid

# Funcionalidades locales deshabilitadas
ENABLE_PDF_GENERATION=false
ENABLE_IMAGE_GENERATION=false
ENABLE_TEMPORARY_COLLECTIONS=false

# Seguridad
SECURE_COOKIES=true
SESSION_SECURE_COOKIE=true